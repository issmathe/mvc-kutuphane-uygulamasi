@model Kitap

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Güncelle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="KitapAdi"></label>
            <input asp-for="KitapAdi" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Tanım"></label>
            <input asp-for="Tanım" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Yazar"></label>
            <input asp-for="Yazar" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Fiyat"></label>
            <input asp-for="Fiyat" disabled class="form-control" />

        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türü Sil</button>
        <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Kitaplara  Geri Dön
        </a>
    </div>
</form>